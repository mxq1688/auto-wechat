<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 远程视频（全屏） -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/remoteVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 本地视频预览（小窗口） -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/localVideoView"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:elevation="4dp" />

    <!-- 顶部状态栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/gradient_top">

        <TextView
            android:id="@+id/callerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="通话对象"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/callStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="正在连接..."
            android:textColor="#CCCCCC"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 来电接听/拒绝布局 -->
    <LinearLayout
        android:id="@+id/incomingCallLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        android:background="@drawable/gradient_bottom">

        <ImageButton
            android:id="@+id/btnReject"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/circle_red"
            android:src="@drawable/ic_call_end"
            android:padding="20dp"
            android:contentDescription="拒绝"
            app:tint="#FFFFFF" />

        <Space
            android:layout_width="80dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/btnAccept"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/circle_green"
            android:src="@drawable/ic_call_accept"
            android:padding="20dp"
            android:contentDescription="接听"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- 通话控制按钮 -->
    <LinearLayout
        android:id="@+id/callControlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="visible"
        android:background="@drawable/gradient_bottom">

        <ImageButton
            android:id="@+id/btnMute"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_dark"
            android:src="@drawable/ic_mic_on"
            android:padding="16dp"
            android:contentDescription="静音"
            app:tint="#FFFFFF" />

        <Space
            android:layout_width="24dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/btnVideo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_dark"
            android:src="@drawable/ic_video_on"
            android:padding="16dp"
            android:contentDescription="视频"
            app:tint="#FFFFFF" />

        <Space
            android:layout_width="24dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_dark"
            android:src="@drawable/ic_switch_camera"
            android:padding="16dp"
            android:contentDescription="切换摄像头"
            app:tint="#FFFFFF" />

        <Space
            android:layout_width="24dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/btnEndCall"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_red"
            android:src="@drawable/ic_call_end"
            android:padding="18dp"
            android:contentDescription="挂断"
            app:tint="#FFFFFF" />
    </LinearLayout>

</FrameLayout>
