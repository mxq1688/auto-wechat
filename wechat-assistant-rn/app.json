{
  "expo": {
    "name": "微信助手",
    "slug": "wechat-assistant-rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "wechatassistant",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wechatassistant.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "需要使用摄像头进行视频通话",
        "NSMicrophoneUsageDescription": "需要使用麦克风进行语音识别和通话",
        "NSSpeechRecognitionUsageDescription": "需要使用语音识别进行语音控制"
      }
    },
    "android": {
      "package": "com.wechatassistant.mobile",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "SYSTEM_ALERT_WINDOW",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-av",
        {
          "microphonePermission": "需要使用麦克风进行语音识别和通话"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
